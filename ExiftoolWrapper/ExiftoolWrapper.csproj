    <DelaySign>false</DelaySign>
    <Version>4.0.0</Version>
    <Authors>Béla Bokor</Authors>
    <Company>Brain2CPU</Company>
    <Description>A .NET dll wrapper over exiftool</Description>
    <Copyright>Copyright © 2013 - 2018 Béla Bokor</Copyright>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageProjectUrl>http://brain2cpu.com/devtools.html</PackageProjectUrl>
    <RepositoryUrl>https://github.com/brain2cpu/ExiftoolWrapper.git</RepositoryUrl>
    <PackageTags>exif exiftool C#</PackageTags>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <DebugType>none</DebugType>
